@model IEnumerable<Food>

@{
    ViewData["Title"] = "Menu Management";
}

<div class="container py-4">

    <!-- Header -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4 gap-3">
        <div>
            <h2 class="fw-bold mb-1">Menu Management</h2>
            <p class="text-muted mb-0">Manage all foods in the system</p>
        </div>
        <a asp-action="Create" class="btn btn-primary px-4 d-flex align-items-center gap-2 shadow-sm">
            <i class="bi bi-plus-lg"></i>
            Add Meal
        </a>
    </div>

    <!-- Filters -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label fw-semibold">Search</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white">
                            <i class="bi bi-search"></i>
                        </span>
                        <input type="text" class="form-control" placeholder="Search meals..." id="searchBox" />
                    </div>
                </div>

                <div class="col-md-3">
                    <label class="form-label fw-semibold">Meal Type</label>
                    <select class="form-select" id="mealTypeFilter">
                        <option value="all">All Meals</option>
                        <option value="breakfast">Breakfast</option>
                        <option value="lunch">Lunch</option>
                        <option value="dinner">Dinner</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    <!-- Table -->
    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle text-center mb-0" id="mealsTable">
                    <thead class="table-light">
                        <tr>
                            <th>Name</th>
                            <th>Type</th>
                            <th>Price</th>
                            <th>Calories</th>
                            <th>Status</th>
                            <th style="width: 150px;">Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var meal in Model)
                        {
                            <tr class="table-row-hover">
                                <td class="fw-semibold">@meal.Title</td>

                                <td>
                                    <span class="badge px-3 py-2 rounded-pill
                                            @(meal.Type == FoodType.Breakfast ? "bg-primary" :
                                                                                    meal.Type == FoodType.Lunch ? "bg-success" : "bg-warning text-dark")">
                                        @meal.Type
                                    </span>
                                </td>

                                <td>$@meal.Price</td>
                                <td>@meal.Calories cal</td>

                                <td>
                                    @if (meal.Available)
                                    {
                                        <span class="badge bg-success px-3 py-2 rounded-pill">Available</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary px-3 py-2 rounded-pill">Unavailable</span>
                                    }
                                </td>

                                <td>
                                    <div class="d-flex justify-content-center gap-2">
                                        <a asp-action="Edit" asp-route-id="@meal.Id"
                                           class="btn btn-outline-primary btn-sm px-3">
                                            <i class="bi bi-pencil"></i>
                                        </a>

                                        <form asp-action="Delete" asp-route-id="@meal.Id" method="post">
                                            <button type="submit" class="btn btn-outline-danger btn-sm px-3">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>

<!-- Live Filtering JS -->
<script>
    const searchBox = document.getElementById('searchBox');
    const mealTypeFilter = document.getElementById('mealTypeFilter');
    const rows = document.querySelectorAll('#mealsTable tbody tr');

    function filterTable() {
        const search = searchBox.value.toLowerCase();
        const type = mealTypeFilter.value;

        rows.forEach(row => {
            const name = row.children[0].textContent.toLowerCase();
            const mealType = row.children[1].textContent.trim().toLowerCase();

            const matchesSearch = name.includes(search);
            const matchesType = type === 'all' || mealType === type;

            row.style.display = (matchesSearch && matchesType) ? '' : 'none';
        });
    }

    searchBox.addEventListener('input', filterTable);
    mealTypeFilter.addEventListener('change', filterTable);
</script>

<style>
   
    .table-row-hover:hover {
        background-color: #f8f9fa !important;
    }
</style>
