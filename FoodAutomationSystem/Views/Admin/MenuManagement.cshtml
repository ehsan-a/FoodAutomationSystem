@using FoodAutomationSystem.Models.ViewModels
@model MenuManagementViewModel
@{
    ViewData["Title"] = "Weekly Menu Management";
}

<div class="container py-4">

    <!-- Header -->
    <div class="d-flex flex-column flex-sm-row justify-content-between align-items-sm-center mb-4 gap-3">
        <div>
            <h1 class="mb-1 fw-bold">Weekly Menu Management</h1>
            <p class="text-muted mb-0">Create and manage your weekly menus efficiently</p>
        </div>
        <button class="btn btn-primary d-flex align-items-center gap-2 rounded-4 shadow-sm" data-bs-toggle="modal" data-bs-target="#weeklyMenuFormModal">
            <i class="bi bi-plus-lg"></i>
            Add New Weekly Menu
        </button>
    </div>

    <!-- Weekly Menu Selection -->
    <form method="get" class="row g-3 mb-4">
        <div class="col-md-5">
            <label class="form-label fw-semibold">Select Weekly Menu</label>
            <select class="form-select rounded-4 shadow-sm" asp-for="SelectedWeeklyMenuId" asp-items="Model.WeeklyMenuOptions" onchange="this.form.submit()">
                <option value="">-- Select Menu --</option>
            </select>
        </div>
    </form>

    @if (Model.SelectedWeeklyMenu != null)
    {
        <!-- Weekly Menu Table -->
        <div class="table-responsive rounded-4 shadow-sm border border-light overflow-auto">
            <table class="table mb-0 text-center align-middle table-hover">
                <thead class="table-light">
                    <tr>
                        <th class="w-25"></th>
                        @for (int i = 0; i < Model.Days.Count; i++)
                        {
                            <th>
                                <div class="fw-semibold">@Model.Days[i]</div>
                                <small class="text-muted">@Model.Dates[i]</small>
                            </th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var mealType in Enum.GetValues(typeof(FoodType)))
                    {
                        <tr>
                            <th class="text-start text-capitalize bg-light fw-semibold">@mealType</th>
                            @for (int i = 0; i < Model.Days.Count; i++)
                            {
                                var date = Model.Dates[i];
                                var food = Model.SelectedWeeklyMenu.FoodMenus.FirstOrDefault(a => a.Food.Type == (FoodType)mealType && (int)a.DayOfWeek == i);

                                <td>
                                    @if (food != null)
                                    {
                                        <div class="p-2 bg-white rounded-3 shadow-sm mb-2">
                                            <div class="fw-bold">@food.Food.Title</div>
                                            <small class="text-muted">$@food.Food.Price</small>
                                            <button class="btn btn-outline-primary btn-sm mt-2 w-100 rounded-pill" data-bs-toggle="modal" data-bs-target="#mealFormModal" data-mealid="@food.Id">
                                                <i class="bi bi-pencil-square"></i> Edit
                                            </button>
                                        </div>
                                    }
                                    else
                                    {
                                        <button class="btn btn-outline-secondary btn-sm w-100 rounded-pill" data-bs-toggle="modal" data-bs-target="#addFoodModal" data-dayindex="@i" data-mealtype="@mealType">
                                            <i class="bi bi-plus-lg"></i> Add
                                        </button>
                                    }
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info rounded-4 shadow-sm mt-3">
            Please select a weekly menu to view or edit its schedule.
        </div>
    }
</div>

<!-- Meal Form Modal -->
<div class="modal fade" id="mealFormModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content rounded-4 shadow-sm">
            <div class="modal-header">
                <h5 class="modal-title fw-semibold">Add / Edit Meal</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                @* Form fields for meal name, description, price, type, image, availability *@
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary rounded-pill" data-bs-dismiss="modal">Cancel</button>
                <button class="btn btn-primary rounded-pill">Save</button>
            </div>
        </div>
    </div>
</div>

<!-- Add Food Modal -->
<div class="modal fade" id="addFoodModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content rounded-4 shadow-sm">
            <div class="modal-header">
                <h5 class="modal-title fw-semibold">Add Food to Schedule</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <table class="table table-hover text-center align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Food</th>
                            <th>Type</th>
                            <th>Price</th>
                            <th>Add</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var food in Model.AllFoods)
                        {
                            <tr>
                                <td>@food.Title</td>
                                <td>@food.Type</td>
                                <td>$@food.Price</td>
                                <td>
                                    <form method="post" asp-action="AddFoodToWeeklyMenu">
                                        <input type="hidden" name="WeeklyMenuId" value="@Model.SelectedWeeklyMenu.Id" />
                                        <input type="hidden" name="FoodId" value="@food.Id" />
                                        <input type="hidden" name="DayIndex" class="day-index-input" />
                                        <input type="hidden" name="MealType" class="meal-type-input" />
                                        <button type="submit" class="btn btn-primary btn-sm rounded-pill">Add</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary rounded-pill" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Weekly Menu Form Modal -->
<div class="modal fade" id="weeklyMenuFormModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-md modal-dialog-centered">
        <div class="modal-content rounded-4 shadow-sm">
            <div class="modal-header">
                <h5 class="modal-title fw-semibold">Add New Weekly Menu</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" asp-action="CreateWeeklyMenu">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="StartDate" class="form-label fw-semibold">Week Start Date</label>
                        <input type="date" class="form-control rounded-3 shadow-sm" id="StartDate" name="StartDate" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary rounded-pill" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary rounded-pill">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    table.table-hover tbody tr:hover {
        background-color: #f8f9fa;
        transition: 0.2s;
    }

    .form-select.rounded-4 {
        border-radius: 1rem !important;
        box-shadow: 0 2px 12px rgba(0,0,0,0.05);
    }

    .btn-rounded-pill {
        border-radius: 50px !important;
    }

    /* Modal Table */
    #addFoodModal table {
        border-radius: 0.75rem;
        overflow: hidden;
    }
</style>

<script>
    
    var addFoodModal = document.getElementById('addFoodModal');
    addFoodModal.addEventListener('show.bs.modal', function (event) {
        var button = event.relatedTarget;
        var dayIndex = button.getAttribute('data-dayindex');
        var mealType = button.getAttribute('data-mealtype');
        addFoodModal.querySelectorAll('.day-index-input').forEach(i => i.value = dayIndex);
        addFoodModal.querySelectorAll('.meal-type-input').forEach(i => i.value = mealType);
    });
</script>
